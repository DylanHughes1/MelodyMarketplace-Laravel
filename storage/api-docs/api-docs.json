{
    "openapi": "3.0.0",
    "info": {
        "title": "My First API",
        "version": "0.1"
    },
    "paths": {
        "/api/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Obtiene todas las categorias.",
                "operationId": "567bebc5b6d654df969726dfe16e0085",
                "responses": {
                    "200": {
                        "description": "All categories obtained.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "description": "Category ID.",
                                                "type": "integer"
                                            },
                                            "name": {
                                                "description": "Category name.",
                                                "type": "string"
                                            },
                                            "image_link": {
                                                "description": "Link to the category image.",
                                                "type": "string"
                                            },
                                            "image_path": {
                                                "description": "Category image path in Cloudinary.",
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "description": "Date when the category was created.",
                                                "type": "string",
                                                "format": "date"
                                            },
                                            "updated_at": {
                                                "description": "Date when the category was updated.",
                                                "type": "string",
                                                "format": "date"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Categories not found.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Error message.",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Categories"
                ],
                "summary": "Crear una nueva categoría",
                "operationId": "ab54f90b49689a1bf027f7cdffdeefe8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "description": "Category name",
                                        "type": "string"
                                    },
                                    "image": {
                                        "description": "Image to upload",
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Category created correctly",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "La categoría se creó con éxito."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Los datos proporcionados no son válidos."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "name": [
                                                    "El campo nombre es obligatorio."
                                                ],
                                                "image": [
                                                    "El campo imagen es obligatorio.",
                                                    "El campo imagen debe ser una imagen.",
                                                    "El campo imagen no debe ser mayor de 1000 kilobytes."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ocurrió un error al almacenar la imagen."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/categories/{id}": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Obtener una categoría por su ID",
                "description": "You get a category specified by your ID.",
                "operationId": "815e701e63f99f01b994c26091eaebb0",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Category ID to get",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Category obtained correctly.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "description": "Category ID.",
                                            "type": "integer"
                                        },
                                        "name": {
                                            "description": "Category name.",
                                            "type": "string"
                                        },
                                        "image_link": {
                                            "description": "Link to the category image.",
                                            "type": "string"
                                        },
                                        "image_path": {
                                            "description": "Category image path in Cloudinary.",
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "description": "Date when the category was created.",
                                            "type": "string",
                                            "format": "date"
                                        },
                                        "updated_at": {
                                            "description": "Date when the category was updated.",
                                            "type": "string",
                                            "format": "date"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "The category does not exist.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "description": "Error message stating that the category does not exist.",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Categories"
                ],
                "summary": "Actualiza una categoría existente.",
                "operationId": "5b3b90d605546877e2ba855dcdeba1d3",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Category ID to update.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Nombre de la categoría"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Category updated correctly.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Categoría actualizada correctamente."
                                        },
                                        "category": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Malformed or missing fields required.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "La solicitud es inválida."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "The specified category does not exist.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "La categoría especificada no existe."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error when upgrading the category.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ocurrió un error al actualizar la categoría."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/subcategories": {
            "get": {
                "tags": [
                    "Subcategories"
                ],
                "summary": "Obtener todas las subcategorías.",
                "operationId": "bb4ab645c3e36f2ff11c6712c3cbb695",
                "responses": {
                    "200": {
                        "description": "Subcategories obtained correctly.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": "1"
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Subcategoría 1"
                                            },
                                            "image_link": {
                                                "type": "string",
                                                "example": "https://example.com/image.jpg"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error when obtaining subcategories.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ocurrió un error al obtener las subcategorías."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    }
}